<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:padding="8dp"
    android:elevation="4dp"> <com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/pictureQuizzImageView"
    android:layout_width="120dp"
    android:layout_height="80dp"
    android:scaleType="centerCrop"
    android:layout_marginStart="12dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameQuizzTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nom du Quizz Actuel"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/descriptionQuizzTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pictureQuizzImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/descriptionQuizzTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CatÃ©gorie : Histoire | 15 Questions"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pictureQuizzImageView"
        app:layout_constraintTop_toBottomOf="@+id/nameQuizzTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>