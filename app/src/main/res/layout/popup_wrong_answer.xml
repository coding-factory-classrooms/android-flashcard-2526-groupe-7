<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_layout_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"  android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <ImageView
                android:id="@+id/iconFeedbackError"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_close_circle"
                android:tint="#FF5722" />

            <TextView
                android:id="@+id/textViewTitleError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAUVAISE RÉPONSE !"
                android:textColor="#333333"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewCorrectLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La bonne réponse était :"
                android:textColor="#FF5722"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewActualCorrectAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Réponse Correcte ici]"
                android:textColor="#333333"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/buttonCloseError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF5722"
                android:text="SUIVANT"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>